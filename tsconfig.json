{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@triad/*": ["../Triad-Documents/*"]
    },
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["client/src", "server", "shared"],
  "references": [
    { "path": "../Triad-Documents" }
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
