{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Triad Learning Report Schema",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "suggestions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "workflow": { "type": "string" },
          "duration": { "type": "number" },
          "suggestion": { "type": "string" }
        },
        "required": ["workflow","duration","suggestion"]
      }
    }
  },
  "required": ["timestamp","suggestions"]
}
